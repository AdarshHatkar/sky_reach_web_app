{
  "compilerOptions": {
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": false,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    /* Custom */
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@stores/*": ["./src/stores/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@common/*": ["./src/routes/-common/*"],
      "@b2fPortal/*": ["./b2fPortal/*"],
      "@serverB2f/*": ["./b2fPortal/serverB2f/*"],
      "@play124Prisma/*": ["./b2fPortal/prisma/play124/*"],
      "@play124ProjectB2f/*": ["./b2fPortal/projectB2f/*"]
    }
  },
  "include": ["src", "b2fPortal"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
